@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
<div class="neutral-10 max-height--100vh overflow-y--auto display--flex flex-direction--column background flex--1 max-width--100vw user-select--none">
	<header class="neutral-10 grid gap--x-small align-items--center padding-horizontal--x-small padding-vertical--small">
		<nav class="span--3">
			<button class="button icon shape--round neutral-10 state--active" @onclick="@(async () => await JSRuntime.InvokeVoidAsync("history.back"))">arrow_back</button>
		</nav>
        <h1 class="span--6 text-align--center typography--title" tabindex="-1">Spotify demo</h1>
	</header>
	<main class="flex--1 padding-bottom--x-large user-select--none">
		@Body
	</main>
	<footer class="position-sticky--bottom grid align-items--center elevation--z4">
        <nav class="grid align-items--start">
            <div class="padding--x-small padding-horizontal">
                <div class="neutral-20 display--flex gap flex-direction--row padding--small shape--small align-items--center">
                    <img src="img/albums/album-5.webp" alt="" class="image shape--x-small width--50px" />
                    <div class="typography--truncate flex--1">
                        <strong class="typography--body-small typography--bold">Parliment</strong>
                        <div class="text-neutral typography--body-x-small">Mothership Connection</div>
                    </div>
                    <nav class="display--flex flex-direction--row justify-content--end">
                        <button class="button--small icon neutral-20 shape--round state--active padding--x-small">devices</button>
                        <button @onclick="() => _favoriteState = !_favoriteState" class="button--small padding--x-small @(_favoriteState ? "icon text-tertiary-50" : "icon--outlined") neutral-20 shape--round state--active">favorite</button>
                        <button @onclick="() => _playState = !_playState" class="button--small padding--x-small neutral-20 shape--round state--active icon"> @(_playState ? "pause" : "play_arrow")</button>
                    </nav>
                </div>
            </div>
            <div class="grid gap--xx-small opacity--0875 neutral-10 padding-horizontal padding-bottom--x-small gap">
                <a class="shape span--4 neutral-10 text-neutral-100 state--active button display--flex flex-direction--column gap--xx-small align-items--center justify-content--center padding--small padding-top">
                    <i class="icon">home</i>
                    <div class="text-align--center typography--body-small">Home</div>
                </a>
                <a class="shape neutral-10 text-neutral-60 state--active span--4 button display--flex flex-direction--column gap--xx-small align-items--center justify-content--center padding--small padding-top">
                    <i class="icon--outlined">search</i>
                    <div class="text-align--center typography--body-small">Search</div>
                </a>
                <a class="shape span--4 neutral-10 text-neutral-60 state--active button display--flex flex-direction--column gap--xx-small align-items--center justify-content--center padding--small padding-top">
                    <i class="icon--outlined">more_vert</i>
                    <div class="text-align--center typography--body-small">More</div>
                </a>
            </div>
        </nav>
    </footer>
</div>
<AnchorNavigation />

@code {
    bool _playState { get; set; } = false;
    bool _favoriteState { get; set; } = false;
}
	
