<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Src\**" />
    <Content Remove="Src\**" />
    <EmbeddedResource Remove="Src\**" />
    <None Remove="Src\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AspNetCore.SassCompiler" Version="1.52.3" />
    <PackageReference Include="BlazorPro.BlazorSize" Version="6.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.6" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Include="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\css\" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\site.webmanifest">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\BEMaterial.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\_Config.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_Typography.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_Variables.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_Colors.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_States.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\_Generators.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_Units.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_Property.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Functions\_string.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_icons.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Sass\Generators\_elevation.scss" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Src\**" />
  </ItemGroup>

</Project>
